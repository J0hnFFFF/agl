# AGL Emotion Service Configuration

# Service
SERVICE_NAME=emotion-service
SERVICE_VERSION=0.2.0

# API Keys
ANTHROPIC_API_KEY=sk-ant-xxx

# ML Configuration
ML_ENABLED=true
ML_CONFIDENCE_THRESHOLD=0.8
ML_MODEL=claude-3-haiku-20240307
ML_MAX_TOKENS=50
ML_TEMPERATURE=0.3

# Cost Control
MAX_COST_PER_REQUEST=0.005
DAILY_ML_BUDGET=5.0
ML_USAGE_RATE_TARGET=0.15

# Caching
CACHE_ENABLED=true
CACHE_TTL=1800

# CORS
CORS_ORIGIN=*

# Server
EMOTION_SERVICE_PORT=8000

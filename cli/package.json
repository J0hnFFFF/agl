    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4",
    "ejs": "^3.1.9",
    "validate-npm-package-name": "^5.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",

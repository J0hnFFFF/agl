# Environment: development | staging | production
NODE_ENV=development

# Database Configuration
# For Development: Use SQLite (simple, no Docker required)
DATABASE_PROVIDER=sqlite
DATABASE_URL=file:./dev.db

# For Production: Use PostgreSQL (scalable, features-rich)
# DATABASE_PROVIDER=postgresql
# DATABASE_URL=postgresql://agl_user:agl_password_dev@localhost:5432/agl_dev

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# JWT Secret (generate a random string for production)
JWT_SECRET=your-secret-key-change-this-in-production

# API Keys for LLM Services
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Cost Management
DAILY_BUDGET_USD=15.0
ML_USAGE_TARGET=0.15
LLM_USAGE_TARGET=0.10

# API Service
API_SERVICE_PORT=3000
API_SERVICE_HOST=0.0.0.0
API_SERVICE_URL=http://localhost:3000

# Realtime Gateway
REALTIME_GATEWAY_PORT=3001
REALTIME_GATEWAY_HOST=0.0.0.0

# Emotion Service
EMOTION_SERVICE_PORT=8000
EMOTION_SERVICE_HOST=0.0.0.0

# Dialogue Service
DIALOGUE_SERVICE_PORT=8001
DIALOGUE_SERVICE_HOST=0.0.0.0

# Memory Service
MEMORY_SERVICE_PORT=3002
MEMORY_SERVICE_HOST=0.0.0.0

# Voice Service (Phase 4B)
VOICE_SERVICE_PORT=8003
VOICE_SERVICE_HOST=0.0.0.0
TTS_ENABLED=true
TTS_MODEL=tts-1
VOICE_DAILY_BUDGET=50.0
CACHE_TTL=604800

# Vision Service (Phase 4B - Optional Backend Proxy)
VISION_SERVICE_PORT=8002
VISION_SERVICE_HOST=0.0.0.0
VISION_ENABLED=true
DEFAULT_PROVIDER=openai-gpt4v
VISION_DAILY_BUDGET=100.0

# CDN Configuration (Phase 4B - Avatar 3D Models)
# URL where 3D model assets are hosted
# Development: Use placeholder URL or local assets
# Production: Use your CDN (AWS S3, Cloudflare R2, etc.)
CDN_BASE_URL=https://cdn.example.com/agl/models

# Analytics Dashboard (Phase 4B)
DASHBOARD_SECRET_KEY=your-secret-key-change-in-production
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_API_KEY=your-api-key-here

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090
